                                        span #
                                        |works
                                li.main-nav__item
                                    a.main-nav__link.menu__item.active-link(href="#") 
                                        span #
                                        |about-me
                                li.main-nav__item
                                    a.main-nav__link.menu__item#myBtn(href="#") 
                                        span #
